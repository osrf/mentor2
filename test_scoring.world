<?xml version="1.0"?>
<sdf version="1.4">
  <world name="test_scoring">
    <include>
      <uri>model://ground_plane</uri>
    </include>

    <include>
      <uri>model://sun</uri>
    </include>

    <plugin name="scoring" filename="libScoringPlugin.so">

    <session></session>

    <region>
      <name>start</name>
      <volume>
          <!-- min and max are sdf::Vector3-->
          <min>-3 -3 0</min>
          <max>3 3 3</max>
     </volume>
    </region>

    <region>
      <name>end</name>
      <volume>
        <min>7 7 0</min>
        <max>13 13 3</max>
      </volume>
    </region>

<!--    
    <event>
      <name>connect</name>
      <type>topic</type>
      <topic_name>~/simple/connection</topic_name>
    </event>
-->

    <event>
      <name>NewSphere</name>
      <type>existence</type>
      <model>unit_sphere</model>
    </event>

    <event>
      <name>God</name>
      <type>existence</type>
      <!-- no model  is specified -->
    </event>

    <!-- when the simulation state changes (pause/play) -->
    <event>
      <name>Sim</name>
      <type>sim_state</type>
    </event>
    
    <!-- bounding box intersection event-->
    <event>
      <name>batiInStart</name>
      <type>inclusion</type>
      <model>AA_battery</model>
      <region>start</region>
    </event>

    <!-- bounding box inclusion event -->
    <event>
      <name>batInEnd</name>
      <type>inclusion</type>
      <model>AA_battery</model>
      <region>end</region>
    </event>

    <!-- detect sudden movement (fall)  -->
    <event>
      <type>motion</type>
      <name>fall</name>
      <model>motor</model>
      <accel>7</accel>
      <vel>5</vel>
    </event>
    </plugin>
    

    <include>
      <pose>0 0 0 0 0 0</pose>
      <uri>model://AA_battery</uri>
    </include>

    <include>
      <pose>1 0 0 0 0 0</pose>
      <uri>model://power_switch</uri>
    </include>

    <include>
      <pose>2 0 0 0 0 0</pose>
      <uri>model://battery_holder</uri>
    </include>

    <include>
      <pose>3 0 0 0 0 0</pose>
      <uri>model://motor</uri>
    </include>



